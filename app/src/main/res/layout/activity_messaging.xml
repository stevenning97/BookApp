<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/msgtxtview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Messaging">

    <TextView
        android:id="@+id/txtSender"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="#1E88E5"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtViewMess"
        android:layout_width="399dp"
        android:layout_height="153dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="4dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnReadMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:text="@string/readmsgbtn" />

    <Button
        android:id="@+id/SendMsgBtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/sendMsgbtn" />

    <Button
        android:id="@+id/btnBacktoHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/btnPrevious" />

</LinearLayout>